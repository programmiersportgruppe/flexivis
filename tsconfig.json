{
  "compilerOptions": {
    "baseUrl": "./src",
    "allowJs": true,
    "checkJs": true,
    "target": "es2019",
    "jsx": "preserve",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "typeRoots": [
      "./src/**/*"
    ],
    "paths": {
      "~*": [
        "./*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}

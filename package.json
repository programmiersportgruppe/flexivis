{
  "name": "flexivis",
  "dependencies": {
    "@riotjs/observable": "^4.0.4",
    "didyoumean": "^1.2.1",
    "flexivis-md": "file:build/flexivis-md",
    "github-markdown-css": "^4.0.0",
    "mermaid": "^8.4.8",
    "ol": "6.1.1",
    "riot": "^4.11.1",
    "vega": "^5.10.1",
    "vega-embed": "^6.5.2",
    "vega-lite": "^4.10.1"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@riotjs/parcel-plugin-riot": "^4.0.1",
    "ava": "^3.6.0",
    "backstopjs": "^4.5.0",
    "esm": "^3.2.25",
    "glob": "^7.1.6",
    "grammkit": "^0.7.1",
    "marked": "^0.8.2",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-render-md": "file:build/parcel-plugin-render-md",
    "pegjs": "^0.10.0",
    "puppeteer": "^2.1.1",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "xo": "^0.28.3"
  },
  "scripts": {
    "backstop": "node build/backstop-config.js && backstop --config tests/visual/backstop.json --docker",
    "start": "parcel index.html",
    "build": "parcel build --no-cache -d dist index.html",
    "lint": "xo --fix --prettier --env=browser || exit 0",
    "test": "npm run lint && ava --verbose && npm run backstop test",
    "build-local-use": "parcel build --no-cache -d dist index.html --public-url ./",
    "readme": "node build/readme.js",
    "generate-parser": "node build/parsers.js"
  },
  "ava": {
    "require": [
      "esm",
      "ts-node/register"
    ],
    "files": [
      "!tests/visual"
    ],
    "typescript": {
      "rewritePaths": {
        "src/": "build/"
      }
    }
  }
}

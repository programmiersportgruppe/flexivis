<content-frame>
  <error-view error={ state.error } />

  <script>
    import { mount } from "../views";

    export default {
      onBeforeMount() {
        this.state.error = this.props.view.error;

        const handleError = error => this.update({ error });


        if (!this.state.error)
          new Promise((resolve, reject) => resolve(mount(this.root, this.props.view, handleError)))
            .catch(handleError);
      },
    }
  </script>
</content-frame>
